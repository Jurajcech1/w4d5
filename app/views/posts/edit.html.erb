<h1>Edit Post</h1>

<form action="<%= post_url(@post) %>" method="post">
<input type="hidden" name="_method" value="PATCH">
<%= auth_token_input %>

  <label for="post_title"><h4>Post Title</h4></label>
  <input
    type="text"
    name="post[title]"
    id = "post_title"
    value="<%= @post.title %>"
    >
    <br>

    <label for="content">content</label>
    <textarea id="content" name="post[content]"> <%= @post.content %> </textarea>

    <br>

    <label for="post_url"><h4>Post url</h4></label>
    <input
      type="text"
      name="post[url]"
      id = "post_url"
      value="<%= @post.url %>"
      >

      <br>
    <input type="submit" value="edit post">
</form>
