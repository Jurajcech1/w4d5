<h1>Please sign in.</h1>

<form action="<%= session_url %>" method="post">

<%= auth_token_input %>

  <label for="user_name">username</label>
  <input
    type="text"
    name="user[user_name]"
    id = "user_name"
    >
    <br>

    <label for="password">password</label>
    <input
      type="password"
      name="user[password]"
      id = "password"
      >

    <br>
    <input type="submit" value="sign in">
</form>

<%= link_to "sign up", new_user_url %>
